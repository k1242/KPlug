// math keymaps

{ "keys": ["`", "1"], "command": "addenv", "args": {"env_name": "vc"}, "context":
    [
        { "key": "selector", "operator": "equal", "operand": "text.tex.latex meta.environment.math" }
    ]
},
{ "keys": ["`", "v"], "command": "addenv", "args": {"env_name": "vv"}, "context":
    [
        { "key": "selector", "operator": "equal", "operand": "text.tex.latex meta.environment.math" }
    ]
},
