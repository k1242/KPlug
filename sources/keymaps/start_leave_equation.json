// start equation env
{ "keys": ["а", "о"], "command": "run_macro_file",   //(+)
    "args": {"file": "Packages/LaTeX042A/sources/Macros/start_tiny_equation.sublime-macro"},
},


// leave equation without space
{ "keys": [" ", " "], "command": "run_macro_file",   //(+)
    "args": {"file": "Packages/LaTeX042A/sources/Macros/leave_equation_v1.sublime-macro"},
    "context":
    [{ 
        "key": "selector", "operator": "equal", 
        "operand": "text.tex.latex meta.environment.math.inline" 
    }]
},



