// tiny inserts in the text mode

{ "keys": ["ъ", "ъ", "н"], "command": "insert_snippet", "args": {"contents": "\\newpage\n"}, "context":
    [{ "key": "selector", "operator": "equal", "operand": "text.tex.latex" }]
},

{ "keys": ["ъ", "-", "о"], "command": "insert_snippet", "args": {"contents": "\\noindent\n"}, "context":
    [{ "key": "selector", "operator": "equal", "operand": "text.tex.latex" }]
},

{ "keys": ["ъ", "с"], "command": "insert_snippet", "args": {"contents": "\\href{${1:}}{${2:}} ${0:}"}, "context":
    [{ "key": "selector", "operator": "equal", "operand": "text.tex.latex" }]
},

{ "keys": ["ъ", "ф"], "command": "insert_snippet", "args": {"contents": "\\phantom{42}"}, "context":
    [{ "key": "selector", "operator": "equal", "operand": "text.tex.latex" }]
},

{ "keys": ["ъ", "з"], "command": "insert_snippet", "args": {"contents": "\\footnote{\n\t$1\n}"}, "context":
    [{ "key": "selector", "operator": "equal", "operand": "text.tex.latex" }]
},
